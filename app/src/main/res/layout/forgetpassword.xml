<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/shahdbold"
        android:text="استرجاع كلمة المرور"
        android:textAlignment="center"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:background="@drawable/input2"
        android:fontFamily="@font/dubailight"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textDirection="rtl"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="الاسم" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:background="@drawable/input2"
        android:fontFamily="@font/dubailight"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="كلمة المرور"
        android:layout_marginStart="20dp"
        android:textDirection="rtl"
        android:textAlignment="center"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:background="@drawable/input2"
        android:fontFamily="@font/dubailight"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textDirection="rtl"
        android:textAlignment="center"
        android:hint="تاكيد كلمة المرور"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/color1"
        android:fontFamily="@font/shahdbold"
        android:text="حفظ"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textDirection="rtl" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="174dp"
        android:text="" />

</RelativeLayout>